<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CubaseDrumMapEditor.App"
			 xmlns:b="clr-namespace:CubaseDrumMapEditor.Behaviors"
			 xmlns:m="clr-namespace:CubaseDrumMapEditor.Models"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
		<StyleInclude Source="DndStyles.axaml" />
    </Application.Styles>

	<Application.Resources>
		<b:DataGridDragHandlder x:Key="DataGridDragHandlder" />

		<b:DataGridDnd x:Key="DataGridDndByDisplayNote" x:TypeArguments="m:MapItem" />
	</Application.Resources>
</Application>
